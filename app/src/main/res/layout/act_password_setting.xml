<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hviewtech.wawupay.ui.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:app_title="Password Setting" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_activity"
        android:divider="@drawable/divider_line_vert"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_12"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="@drawable/bg_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="settingPaymentPassword"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_28"
            android:paddingRight="@dimen/dp_24">

            <net.soulwolf.widget.ratiolayout.widget.RatioImageView
                android:layout_width="@dimen/dp_39"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_set_amount"
                app:layoutAspectRatio="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:singleLine="true"
                android:text="Payment password"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@drawable/icon_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="@drawable/bg_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="settingLoginPassword"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_28"
            android:paddingRight="@dimen/dp_24">

            <net.soulwolf.widget.ratiolayout.widget.RatioImageView
                android:layout_width="@dimen/dp_39"
                android:layout_height="wrap_content"
                android:src="@drawable/set_password_login"
                app:layoutAspectRatio="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:singleLine="true"
                android:text="Login password"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:src="@drawable/icon_right" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>