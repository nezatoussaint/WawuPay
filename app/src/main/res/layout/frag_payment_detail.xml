<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_49"
    android:layout_marginRight="@dimen/dp_12"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12">


    <TextView
        android:id="@+id/label_amount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:text="Amount"
        android:textColor="@color/text_label"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_69"
        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@id/label_orderno"
        android:gravity="center_vertical|right"
        android:text=""
        android:textColor="#333333"
        android:textSize="@dimen/sp_25" />

    <View
        android:id="@+id/vline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:layout_below="@id/label_amount"
        android:layout_marginLeft="@dimen/dp_m_12"
        android:layout_marginRight="@dimen/dp_m_12"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="#D9D9D9" />

    <TextView
        android:id="@+id/label_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vline"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="Type"
        android:textColor="@color/text_label"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/label_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_type"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="Time"
        android:textColor="@color/text_label"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/label_orderno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_time"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="Order No"
        android:textColor="@color/text_label"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/label_type"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@id/label_orderno"
        android:gravity="right"
        android:text=""
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/createTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_type"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@id/label_orderno"
        android:gravity="right"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/orderNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_time"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@id/label_orderno"
        android:gravity="right"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>