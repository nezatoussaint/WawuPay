<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.hviewtech.wawupay.ui.widget.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:app_title="Welcome to use WawuPay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6E6"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/register_user"
                        android:drawablePadding="@dimen/dp_17"
                        android:hint="@string/prompt_enter_username"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_7"
                        android:paddingRight="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">

                    <EditText
                        android:id="@+id/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/register_enter"
                        android:drawablePadding="@dimen/dp_17"
                        android:hint="@string/prompt_enter_firstname"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_7"
                        android:paddingRight="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">

                    <EditText
                        android:id="@+id/lastname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/register_enter"
                        android:drawablePadding="@dimen/dp_17"
                        android:hint="@string/prompt_enter_lastname"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_7"
                        android:paddingRight="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/register_phone"
                        android:drawablePadding="@dimen/dp_17"
                        android:hint="@string/prompt_enter_email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_7"
                        android:paddingRight="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/register_phone"
                        android:drawablePadding="@dimen/dp_17"
                        android:hint="@string/prompt_enter_phonenumber"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_7"
                        android:paddingRight="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/smsCode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/register_verification"
                            android:drawablePadding="@dimen/dp_17"
                            android:hint="@string/prompt_vertification_code"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/dp_7"
                            android:paddingRight="@dimen/dp_7"
                            android:paddingBottom="@dimen/dp_16"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>

                    <com.hviewtech.wawupay.ui.widget.StateButton
                        android:id="@+id/smsCodeTip"
                        style="@style/Button"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:enabled="true"
                        android:onClick="getCode"
                        android:text="Get Code"
                        android:textColor="#2BCD87"
                        app:normalStrokeColor="#2BCD87"
                        app:normalStrokeWidth="@dimen/dp_1"
                        app:normalTextColor="#2BCD87"
                        app:radius="@dimen/dp_15"
                        app:unableStrokeColor="#999999"
                        app:unableStrokeWidth="@dimen/dp_1"
                        app:unableTextColor="#999999" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/register_password"
                        android:drawablePadding="@dimen/dp_17"
                        android:hint="@string/prompt_enter_password"
                        android:imeOptions="actionNext"
                        android:inputType="textWebPassword"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_7"
                        android:paddingRight="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_hint"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">

                    <EditText
                        android:id="@+id/password2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableLeft="@drawable/register_confirm"
                        android:drawablePadding="@dimen/dp_17"
                        android:hint="@string/prompt_confirm_password"
                        android:imeOptions="actionDone"
                        android:inputType="textWebPassword"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_7"
                        android:paddingRight="@dimen/dp_7"
                        android:paddingBottom="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_hint"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12">

                <CheckBox
                    android:id="@+id/agreeProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/register_agree_seletor"
                    android:padding="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_14" />

                <TextView
                    android:id="@+id/protocol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/prompt_register_wowpay_protocol"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <com.hviewtech.wawupay.ui.widget.StateButton
                style="@style/MaterialButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_53"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_40"
                android:onClick="register"
                android:text="Register"
                android:textSize="@dimen/sp_16"
                app:normalBackgroundColor="#2BCD87"
                app:normalTextColor="#F3F3F3"
                app:pressedTextColor="@color/white"
                app:radius="@dimen/dp_22" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>